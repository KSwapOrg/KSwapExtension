{
  "manifest_version": 3,
  "name": "KSwap Wallet Extension",
  "version": "1.0.1",
  "description": "A secure Chrome extension wallet for the Keeta Network by KSwap",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.keeta.com/*",
    "https://*.keeta.network/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.keeta.com/*",
        "https://*.keeta.network/*",
        "https://app.kswap.org/*"
      ],
      "js": ["src/content/inject.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "KSwap Wallet Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/content/keeta-provider.js"],
      "matches": [
        "https://*.keeta.com/*",
        "https://*.keeta.network/*",
        "https://app.kswap.org/*"
      ]
    }
  ]
}
